<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title><%= @title %></title>
		<link href="/css/style.css" rel="stylesheet"/>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" rel="stylesheet" />
	</head>
	<body>
		<div class="container">
			<%
			nav = ["Home", "About Us", "Treatments", "Patient Info", "Contact Us"]
			pages = ["/", "about","treatments", "patientinfo", "form"]
			%>
			<div class="row" >
				<div class="two columns">
					<h3><em>Dr. Elias</em></h3>
				</div>
				<div class="ten columns nav">
					<ul>
						<!-- start ruby -->
						<% nav.each_with_index do |page, index| %>
						<li>
							<a href="<%= pages[index] %>">
								<button>
								<%= page %>
								</button>
							</a>
						</li>
						<% end %>
						<!-- end ruby -->
					</ul>
				</div>
			</div>
			<div class="Row">
				<!-- This is the slider HTML -->
				<div class="twelve columns" style="background-color:green; height:300px;">
				</div>
			</div>
			<!-- start ruby -->
			<div class="row content">
				<div class="twelve columns">
					<%= yield %>
					<!-- end ruby -->
				</div>
			</div>
			<hr />
			<div class="row">
				<div class="one-third column footer">
					<h4>Visit Us</h4>
					<p>2839 Route 10 East,<br>
						Morris Plains, NJ, 07950<br>
						Tel: 973-292-9248<br>
					â€‹				Mail:info@eliasmds.com</p>
				</div>
				<div class="one-third column footer">
					<h4>Office Hours</h4>
					<p>
						By appointment only including Saturdays. We also offer late evening hours on Tuesdays and Thursdays
					</p>
				</div>
				<div class="one-third column footer">
					<h4>Download Forms</h4>
					<a href="">New Patient Form</a><br>
					<a href="">Allergy History Form</a><br>
					<a href="">HIPA Form</a>
				</div>
			</div>
		<hr />
			<div class="row insurance-images">
				<div class="twelve columns">
					<img src="/images/aetna.png" alt="insurance">
					<img src="/images/bcbs.png">
					<img src="/images/cigna.png">
					<img src="/images/humana.jpeg">
					<img src="/images/metlife.jpeg">
					<img src="/images/ubh.jpeg">
					<img src="/images/uh.png">
				</div>
			</div>
		</div>
	</body>
</html>